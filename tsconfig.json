{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "strictNullChecks": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "outDir": "release",
        "lib": [
            "es2015",
            "es2015.promise",
            "dom"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}